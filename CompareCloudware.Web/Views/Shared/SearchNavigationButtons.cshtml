@Html.Hidden("pageCount", searchResultsPages.PageCount, new { @id = "pageCount" })
<table width="100%">
    <tr>
@*        <td style="width:80%;margin:auto;">*@
        <td>
            <div class="pagination-centred">
            <div class="pagination">
                <ul>
@*                    @if (searchResultsPages.HasPreviousPage)*@
                    {
                        <li>
                            <label class="font-normal-13px-blue navigate-search-results"><< First</label>
                        </li>
                        <li>
