                            <i class="icon-arrow-left"></i>
                        </li>
                    }*@
                    
                    
                    
                    
                    @for (int i = searchResultsPages.PageNumber - 3; i < searchResultsPages.PageNumber; i++)
                    {
                        if (i > 0 && searchResultsPages.PageCount >= i)
                        {
                        <li>
                            <label class="font-normal-13px-blue navigate-search-results">@i</label>
                        </li>
                        }
                    }
                    <li class="active">
                        <label class="font-normal-13px-blue navigate-search-results">@searchResultsPages.PageNumber</label>
                    </li>
                    @for (int i = searchResultsPages.PageNumber + 1; i <= searchResultsPages.PageNumber + 3; i++)
                    {
                        if (i <= searchResultsPages.PageCount)
                        {
                        <li>
                            <label class="font-normal-13px-blue navigate-search-results">@i</label>
                        </li>
                        }
                    }
@*                    @if (searchResultsPages.HasNextPage)*@
                    {
                        <li>
